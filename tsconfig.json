{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types", "src/@types"]
  }
}
